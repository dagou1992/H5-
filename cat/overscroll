<div class="scrollerFooter1"></div>
<script>
    //  IntersectionObserver 传入 callback
    var observer = new IntersectionObserver(function(changes) {
        if (changes[0].intersectionRatio <= 0) return;
        loadItems(3);
        console.log('Loaded new items');
    })

    observer.observe(
        document.querySelector('.scrollerFooter1')
    );

    function loadItems(number) {
        for (var i = 0; i< number; i++) {
            document.getElementById('container').appendChild(document.getElementById('container').firstChild)
        }
    }
</script>
